version: "3.9"
services:
  app:
    platform: "linux/amd64"
    build:
      context: .
      dockerfile: Dockerfile
      args:
        NEXT_PUBLIC_PUSHER_APP_KEY: "test"
        NEXT_PUBLIC_PUSHER_APP_CLUSTER: "test"
        NEXT_PUBLIC_PUSHER_APP_HOST: "localhost"
        NEXT_PUBLIC_PUSHER_APP_PORT: "6001"
    ports:
      - "3000:3000"
    environment:
      - DATABASE_URL=
      - EMAIL_SERVER_HOST=
      - EMAIL_SERVER_PORT=
      - EMAIL_SERVER_USER=
      - EMAIL_SERVER_PASSWORD=
      - EMAIL_FROM=
      - EMAIL_NOTIFY_ADDRESS=
      - NEXTAUTH_SECRET=
      - NEXTAUTH_URL=
      - PUSHER_APP_ID=
      - PUSHER_APP_KEY=
      - PUSHER_APP_SECRET=
      - PUSHER_APP_USE_TLS=
      - PUSHER_APP_HOST=
      - PUSHER_APP_CLUSTER=
      - PUSHER_APP_PORT=
    depends_on:
      - soketi
      - db

  soketi:
    image: quay.io/soketi/soketi:1.4-16-debian
    ports:
      - "6001:6001"
    environment:
      - SOKETI_DEBUG=0
      - SOKETI_DEFAULT_APP_ID=
      - SOKETI_DEFAULT_APP_KEY=
      - SOKETI_DEFAULT_APP_SECRET=
      - SOKETI_DB_REDIS_HOST=redis
    depends_on:
      - redis
  
  redis:
    image: redis:alpine3.17

  db:
    image: postgres:14.7-alpine3.17
    environment:
      - POSTGRES_PASSWORD=